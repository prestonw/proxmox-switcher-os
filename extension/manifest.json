{
  "name": "Proxmox Switcher Tools",
  "description": "Overlay for Proxmox UI to assign hotkeys and manage VMs.",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://localhost:9000/*", "http://*/*", "https://*/*"],
  "action": {
    "default_title": "Switcher Tools",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
